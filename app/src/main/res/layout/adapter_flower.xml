<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/image_View"
            android:layout_margin="8dp"
            android:background="@drawable/background_circular_image"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_View"
            android:text="Flower Name"
            android:layout_centerInParent="true"
            android:id="@+id/txt_flowerName"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_vector_bookmark"
                android:layout_marginRight="4dp"
                android:id="@+id/image_bookmark_icon"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_vector_share"
                android:layout_marginRight="4dp"
                android:id="@+id/image_share_icon"/>

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>